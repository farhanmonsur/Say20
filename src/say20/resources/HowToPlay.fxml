<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="howtoplay" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="say20.HowToPlayController">
    <children>
        <Button layoutX="270.0" layoutY="335.0" mnemonicParsing="false" onAction="#GoBackButtonPushed" text="Go Back" />
        <VBox layoutX="47.0" layoutY="93.0" prefHeight="214.0" prefWidth="505.0">
            <children>
                <Label prefHeight="37.0" prefWidth="505.0" text="One may count upto one or two  numbers per turn, and the numbers must be in counting order." textAlignment="JUSTIFY" wrapText="true" />
                <Label layoutX="10.0" layoutY="10.0" prefHeight="44.0" prefWidth="505.0" text="One must start with the number after the last one that the other one said." textAlignment="JUSTIFY" wrapText="true" />
                <Label layoutX="10.0" layoutY="47.0" prefHeight="44.0" prefWidth="505.0" text="For example, the first person can say '1' or  '2'." textAlignment="JUSTIFY" wrapText="true" />
                <Label layoutX="10.0" layoutY="91.0" prefHeight="44.0" prefWidth="505.0" text="If the first person says '2', then the second person could say '3' or '4' and so on." textAlignment="JUSTIFY" wrapText="true" />
                <Label layoutX="10.0" layoutY="135.0" prefHeight="44.0" prefWidth="505.0" text="The first one to say '20' will win the game." textAlignment="JUSTIFY" wrapText="true" />
            </children>
        </VBox>
        <Label layoutX="223.0" layoutY="42.0" text="Here's How To Play" textAlignment="CENTER">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
